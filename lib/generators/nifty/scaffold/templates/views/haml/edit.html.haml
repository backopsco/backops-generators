%h2 Edit <%= display_singular_name.titleize %>

= form_for @<%= instance_name %>, url: <%= item_path :instance_variable => true %> do |f|
  = render partial: 'form', locals: {f: f}
  .actions
    = f.submit 'Update' , class: 'btn btn-default'

  %ul.actions.list-inline
    %li
      = f.submit 'Update' , class: 'btn btn-default'
    <%- if action? :index -%>
    %li
      = link_to 'Back to List', <%= items_path %>, class: 'btn btn-default'
    <%- end -%>
    <%- if action? :show -%>
    %li
      = link_to 'Show', <%= item_path instance_variable: true %>, class: 'btn btn-default'
    <%- end -%>
