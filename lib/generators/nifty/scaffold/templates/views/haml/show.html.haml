%h2 <%= display_singular_name.titleize %>

<%- for attribute in model_attributes -%>
%p
  %strong <%= attribute.human_name.titleize %>:
  = @<%= instance_name %>.<%= attribute.name %>
<%- end -%>

%p
  <%- if action? :edit -%>
  = link_to 'Edit', <%= item_path action: :edit, instance_variable: true %>, class: 'btn btn-default'
  |
  <%- end -%>
  <%- if action? :destroy -%>
  = link_to 'Destroy', <%= item_path instance_variable: true %>, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-default'
  |
  <%- end -%>
  <%- if action? :index -%>
  = link_to 'View All', <%= items_path %>, class: 'btn btn-default'
  <%- end -%>
