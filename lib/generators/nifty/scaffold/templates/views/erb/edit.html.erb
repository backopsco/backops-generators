<h1> Edit <%= singular_name.titleize %> </h1>

<%%= form_for @<%= singular_name %>, :url => <%= item_path  %>(@<%= singular_name %>) do |f| %>
  <%=  render :partial => 'form', :locals => {:f => f} %>
  <div class="actions"><%%= f.submit, 'Update' , :class => 'button' %></div>
<%% end %>

<%- if actions? :show, :index -%>
<p>
<%- if action? :show -%>
  <%%= link_to "Show", <%= item_path :instance_variable => true %>, :class => 'button' %> |
<%- end -%>
<%- if action? :index -%>
  <%%= link_to "View All", <%= items_path %>, :class => 'button' %>
<%- end -%>
</p>
<%- end -%>
